<?xml version="1.0" encoding="UTF-8" ?>
<views:MvxContentPage
    x:Class="QuizzPokedex.UI.Views.PokemonView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:QuizzPokedex.UI.Converters"
    xmlns:ef="clr-namespace:AiForms.Effects;assembly=AiForms.Effects"
    xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
    xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:shadows="http://sharpnado.com"
    xmlns:viewmodel="clr-namespace:QuizzPokedex.ViewModels;assembly=QuizzPokedex"
    xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    x:TypeArguments="viewmodel:PokemonViewModel"
    BackgroundColor="White"
    NavigationPage.HasNavigationBar="False">

    <views:MvxContentPage.Resources>
        <ResourceDictionary>
            <converters:ByteToImageSourceConverter x:Key="ByteToImageSourceConverter" />
        </ResourceDictionary>
    </views:MvxContentPage.Resources>
    <ContentPage.Content>
        <ScrollView x:Name="ScrollViewPok" BackgroundColor="white">
            <StackLayout>
                <AbsoluteLayout HeightRequest="300">
                    <StackLayout
                        x:Name="backButton"
                        AbsoluteLayout.LayoutBounds="0,0.04,0.23,0.07"
                        AbsoluteLayout.LayoutFlags="All">
                        <shadows:Shadows Margin="29.5,0,29.5,50" CornerRadius="20">
                            <shadows:Shadows.Shades>
                                <shadows:ImmutableShades>
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="-1,-1"
                                        Color="#464C56" />
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="1,1"
                                        Color="#464C56" />
                                </shadows:ImmutableShades>
                            </shadows:Shadows.Shades>
                            <pv:PancakeView
                                BackgroundColor="White"
                                Border="{pv:BorderMarkup Color=Gray,
                                                         Thickness=0}"
                                CornerRadius="100,100,100,100">
                                <ImageButton
                                    Padding="4,9,5,9"
                                    BackgroundColor="White"
                                    Command="{Binding NavigationBackCommandAsync}"
                                    HeightRequest="35"
                                    Source="@mipmap/left"
                                    WidthRequest="35" />
                            </pv:PancakeView>
                        </shadows:Shadows>
                    </StackLayout>
                    <StackLayout
                        x:Name="favoriteButton"
                        AbsoluteLayout.LayoutBounds="1,0.04,0.23,0.07"
                        AbsoluteLayout.LayoutFlags="All">
                        <shadows:Shadows Margin="29.5,0,29.5,50" CornerRadius="20">
                            <shadows:Shadows.Shades>
                                <shadows:ImmutableShades>
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="-1,-1"
                                        Color="#464C56" />
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="1,1"
                                        Color="#464C56" />
                                </shadows:ImmutableShades>
                            </shadows:Shadows.Shades>
                            <pv:PancakeView
                                BackgroundColor="White"
                                Border="{pv:BorderMarkup Color=Gray,
                                                         Thickness=0}"
                                CornerRadius="100,100,100,100">
                                <ImageButton
                                    Padding="4,7,4,6"
                                    BackgroundColor="White"
                                    Command="{Binding FavoriteCommandAsync}"
                                    HeightRequest="35"
                                    Source="{Binding ImgFavorite, Converter={StaticResource ByteToImageSourceConverter}}"
                                    WidthRequest="35" />
                            </pv:PancakeView>
                        </shadows:Shadows>
                    </StackLayout>
                    <StackLayout AbsoluteLayout.LayoutBounds="0.5,0.08,0.656,0.4" AbsoluteLayout.LayoutFlags="All">
                        <StackLayout
                            ef:Border.Color="{Binding FirstType.ImgColor}"
                            ef:Border.Radius="150"
                            ef:Border.Width="1"
                            xct:CornerRadiusEffect.CornerRadius="150"
                            xct:ShadowEffect.Color="{Binding FirstType.ImgColor}"
                            xct:ShadowEffect.OffsetX="-10"
                            xct:ShadowEffect.OffsetY="-10"
                            xct:ShadowEffect.Opacity="1"
                            xct:ShadowEffect.Radius="60">
                            <Image HeightRequest="270" Source="{Binding FirstType.PathFondGo}" />
                        </StackLayout>
                    </StackLayout>
                    <StackLayout
                        AbsoluteLayout.LayoutBounds="0,0.28,1,0.93"
                        AbsoluteLayout.LayoutFlags="All"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand">
                        <Image
                            HeightRequest="200"
                            Source="{Binding Pokemon.PathImg}"
                            WidthRequest="200" />
                    </StackLayout>
                    <StackLayout AbsoluteLayout.LayoutBounds="0.5,0.02,0.4,0.05" AbsoluteLayout.LayoutFlags="All">
                        <StackLayout
                            Padding="10"
                            ef:Border.Color="{Binding FirstType.ImgColor}"
                            ef:Border.Radius="150"
                            ef:Border.Width="1"
                            xct:CornerRadiusEffect.CornerRadius="150"
                            xct:ShadowEffect.Color="{Binding FirstType.ImgColor}"
                            xct:ShadowEffect.OffsetX="-10"
                            xct:ShadowEffect.OffsetY="-10"
                            xct:ShadowEffect.Opacity="1"
                            xct:ShadowEffect.Radius="40"
                            BackgroundColor="white">
                            <Label
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                FontAttributes="Bold"
                                HeightRequest="40"
                                HorizontalTextAlignment="Center"
                                Text="{Binding Pokemon.Number, StringFormat='#{0}'}"
                                TextColor="black" />
                        </StackLayout>
                    </StackLayout>
                    <StackLayout AbsoluteLayout.LayoutBounds="0.5,0.9,0.5,0.05" AbsoluteLayout.LayoutFlags="All">
                        <StackLayout
                            Padding="10"
                            ef:Border.Color="{Binding FirstType.ImgColor}"
                            ef:Border.Radius="150"
                            ef:Border.Width="1"
                            xct:CornerRadiusEffect.CornerRadius="150"
                            xct:ShadowEffect.Color="{Binding FirstType.ImgColor}"
                            xct:ShadowEffect.OffsetX="-10"
                            xct:ShadowEffect.OffsetY="-10"
                            xct:ShadowEffect.Opacity="1"
                            xct:ShadowEffect.Radius="40"
                            BackgroundColor="white">
                            <Label
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                HeightRequest="40"
                                HorizontalTextAlignment="Center"
                                Text="{Binding Pokemon.Name}"
                                TextColor="black" />
                        </StackLayout>
                    </StackLayout>
                </AbsoluteLayout>
                <RelativeLayout>
                    <StackLayout Margin="100,0,100,0">
                        <CollectionView
                            x:Name="PokemonList"
                            HeightRequest="20"
                            ItemsSource="{Binding Types}">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" Span="{Binding Types.Count}" />
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="3*" />
                                        </Grid.RowDefinitions>
                                        <Image
                                            Grid.Row="0"
                                            Aspect="AspectFit"
                                            HeightRequest="20"
                                            Source="{Binding PathMiniHome}"
                                            WidthRequest="20" />
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Selected">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="White" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </RelativeLayout>
                <RelativeLayout>
                    <StackLayout Margin="50,10,50,10">
                        <Label
                            xct:ShadowEffect.Color="#464C56"
                            xct:ShadowEffect.OffsetY="10"
                            xct:ShadowEffect.Opacity="0.5"
                            FontAttributes="Italic"
                            Text="{Binding Pokemon.DescriptionVx}"
                            TextColor="black" />
                    </StackLayout>
                </RelativeLayout>
                <RelativeLayout>
                    <StackLayout WidthRequest="155">
                        <shadows:Shadows CornerRadius="20">
                            <shadows:Shadows.Shades>
                                <shadows:ImmutableShades>
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="-1,-1"
                                        Color="#464C56" />
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="1,1"
                                        Color="#464C56" />
                                </shadows:ImmutableShades>
                            </shadows:Shadows.Shades>
                            <pv:PancakeView
                                BackgroundColor="{Binding FirstType.InfoColor}"
                                Border="{pv:BorderMarkup Color=Black,
                                                         Thickness=0}"
                                CornerRadius="0,100,0,100">
                                <Label
                                    Padding="20,4,4,4"
                                    xct:ShadowEffect.Color="#464C56"
                                    xct:ShadowEffect.OffsetY="10"
                                    xct:ShadowEffect.Opacity="0.5"
                                    Text="Données de Base"
                                    TextColor="White" />
                            </pv:PancakeView>
                        </shadows:Shadows>
                    </StackLayout>
                    <StackLayout Margin="0,30,0,0">
                        <Grid Margin="60,10,60,10">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.Row="0"
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                FontAttributes="Bold"
                                Text="Catégorie:"
                                TextColor="black" />
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                Text="{Binding Pokemon.Category}"
                                TextColor="black" />

                            <Label
                                Grid.Row="1"
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                FontAttributes="Bold"
                                Text="Taille:"
                                TextColor="black" />
                            <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                Text="{Binding Pokemon.Size}"
                                TextColor="black" />

                            <Label
                                Grid.Row="2"
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                FontAttributes="Bold"
                                Text="Poids:"
                                TextColor="black" />
                            <Label
                                Grid.Row="2"
                                Grid.Column="1"
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                Text="{Binding Pokemon.Weight}"
                                TextColor="black" />

                            <Label
                                Grid.Row="3"
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                FontAttributes="Bold"
                                Text="Éclosion:"
                                TextColor="black" />
                            <Label
                                Grid.Row="3"
                                Grid.Column="1"
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                Text="{Binding Pokemon.EggMoves, StringFormat='{0} pas'}"
                                TextColor="black" />

                            <Label
                                Grid.Row="4"
                                Grid.ColumnSpan="2"
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                FontAttributes="Bold"
                                Text="Taux de capture:"
                                TextColor="black" />
                            <Label
                                Grid.Row="4"
                                Grid.Column="1"
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                HorizontalTextAlignment="center"
                                Text="{Binding Pokemon.CaptureRate}"
                                TextColor="black" />

                            <Label
                                Grid.Row="5"
                                Grid.ColumnSpan="2"
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                FontAttributes="Bold"
                                Text="Bonheur de base:"
                                TextColor="black" />
                            <Label
                                Grid.Row="5"
                                Grid.Column="1"
                                xct:ShadowEffect.Color="#464C56"
                                xct:ShadowEffect.OffsetY="10"
                                xct:ShadowEffect.Opacity="0.5"
                                HorizontalTextAlignment="Center"
                                Text="{Binding Pokemon.BasicHappiness}"
                                TextColor="black" />

                            <Image
                                Grid.Row="1"
                                Grid.RowSpan="3"
                                Grid.Column="2"
                                ef:AddCommand.Command="{Binding PlaySoundCommandAsync}"
                                Aspect="AspectFit"
                                Background="White"
                                BackgroundColor="White"
                                HeightRequest="20"
                                Source="{Binding Pokemon.PathSprite}" />
                        </Grid>
                    </StackLayout>
                </RelativeLayout>
                <RelativeLayout IsVisible="{Binding TalentIsVisible}">
                    <StackLayout WidthRequest="160">
                        <shadows:Shadows CornerRadius="20">
                            <shadows:Shadows.Shades>
                                <shadows:ImmutableShades>
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="-1,-1"
                                        Color="#464C56" />
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="1,1"
                                        Color="#464C56" />
                                </shadows:ImmutableShades>
                            </shadows:Shadows.Shades>
                            <pv:PancakeView
                                BackgroundColor="{Binding FirstType.InfoColor}"
                                Border="{pv:BorderMarkup Color=Black,
                                                         Thickness=0}"
                                CornerRadius="0,100,0,100">
                                <Label
                                    Padding="20,4,4,4"
                                    xct:ShadowEffect.Color="#464C56"
                                    xct:ShadowEffect.OffsetY="10"
                                    xct:ShadowEffect.Opacity="0.5"
                                    Text="Capacité Spéciale"
                                    TextColor="White" />
                            </pv:PancakeView>
                        </shadows:Shadows>
                    </StackLayout>
                    <StackLayout Margin="50,40,50,10">
                        <CollectionView
                            x:Name="TalentList"
                            HeightRequest="{Binding HeightTalent}"
                            ItemsSource="{Binding Talent}"
                            VerticalScrollBarVisibility="Never">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Label
                                            Grid.Row="0"
                                            xct:ShadowEffect.Color="#464C56"
                                            xct:ShadowEffect.OffsetY="10"
                                            xct:ShadowEffect.Opacity="0.5"
                                            FontAttributes="Bold"
                                            Text="{Binding Name}"
                                            TextColor="black" />
                                        <Label
                                            Grid.Row="1"
                                            Margin="0,0,0,10"
                                            xct:ShadowEffect.Color="#464C56"
                                            xct:ShadowEffect.OffsetY="10"
                                            xct:ShadowEffect.Opacity="0.5"
                                            Text="{Binding Description}"
                                            TextColor="black" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </RelativeLayout>
                <RelativeLayout IsVisible="{Binding StatisticIsVisible}">
                    <StackLayout WidthRequest="160">
                        <shadows:Shadows CornerRadius="20">
                            <shadows:Shadows.Shades>
                                <shadows:ImmutableShades>
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="-1,-1"
                                        Color="#464C56" />
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="1,1"
                                        Color="#464C56" />
                                </shadows:ImmutableShades>
                            </shadows:Shadows.Shades>
                            <pv:PancakeView
                                BackgroundColor="{Binding FirstType.InfoColor}"
                                Border="{pv:BorderMarkup Color=Black,
                                                         Thickness=0}"
                                CornerRadius="0,100,0,100">
                                <Label
                                    Padding="20,4,4,4"
                                    xct:ShadowEffect.Color="#464C56"
                                    xct:ShadowEffect.OffsetY="10"
                                    xct:ShadowEffect.Opacity="0.5"
                                    Text="Statistiques"
                                    TextColor="White" />
                            </pv:PancakeView>
                        </shadows:Shadows>
                    </StackLayout>
                    <StackLayout Margin="50,40,50,10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <microcharts:ChartView
                                Grid.Row="0"
                                Grid.Column="0"
                                BackgroundColor="White"
                                Chart="{Binding ChartStats}"
                                HeightRequest="250" />
                        </Grid>
                    </StackLayout>
                </RelativeLayout>
                <RelativeLayout IsVisible="{Binding FamilyEvolIsVisible}">
                    <StackLayout WidthRequest="105">
                        <shadows:Shadows CornerRadius="20">
                            <shadows:Shadows.Shades>
                                <shadows:ImmutableShades>
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="-1,-1"
                                        Color="#464C56" />
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="1,1"
                                        Color="#464C56" />
                                </shadows:ImmutableShades>
                            </shadows:Shadows.Shades>
                            <pv:PancakeView
                                BackgroundColor="{Binding FirstType.InfoColor}"
                                Border="{pv:BorderMarkup Color=Black,
                                                         Thickness=0}"
                                CornerRadius="0,100,0,100">
                                <Label
                                    Padding="20,4,4,4"
                                    xct:ShadowEffect.Color="#464C56"
                                    xct:ShadowEffect.OffsetY="10"
                                    xct:ShadowEffect.Opacity="0.5"
                                    Text="Évolution"
                                    TextColor="White" />
                            </pv:PancakeView>
                        </shadows:Shadows>
                    </StackLayout>
                    <StackLayout Margin="20,40,20,0">
                        <CollectionView
                            x:Name="EvolutionList"
                            HeightRequest="{Binding HeightFamilyEvol}"
                            ItemsSource="{Binding FamilyEvolution}"
                            SelectedItem="{Binding SelectedPokemon}"
                            SelectionChanged="EvolutionList_SelectionChanged"
                            SelectionMode="Single">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" Span="{Binding CountFamilyEvol}" />
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="110" />
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Image
                                            Grid.Row="0"
                                            Aspect="AspectFit"
                                            HeightRequest="100"
                                            Source="{Binding PathImg}"
                                            WidthRequest="100" />
                                        <Label
                                            Grid.Row="1"
                                            xct:ShadowEffect.Color="#464C56"
                                            xct:ShadowEffect.OffsetY="10"
                                            xct:ShadowEffect.Opacity="0.5"
                                            FontAttributes="Bold"
                                            HorizontalOptions="CenterAndExpand"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding Name}"
                                            TextColor="black" />
                                        <Label
                                            Grid.Row="2"
                                            xct:ShadowEffect.Color="#464C56"
                                            xct:ShadowEffect.OffsetY="10"
                                            xct:ShadowEffect.Opacity="0.5"
                                            FontSize="11"
                                            HorizontalOptions="CenterAndExpand"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding WhenEvolution}"
                                            TextColor="black" />
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Selected">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="White" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </RelativeLayout>
                <RelativeLayout IsVisible="{Binding MegaEvolIsVisible}">
                    <StackLayout WidthRequest="145">
                        <shadows:Shadows CornerRadius="20">
                            <shadows:Shadows.Shades>
                                <shadows:ImmutableShades>
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="-1,-1"
                                        Color="#464C56" />
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="1,1"
                                        Color="#464C56" />
                                </shadows:ImmutableShades>
                            </shadows:Shadows.Shades>
                            <pv:PancakeView
                                BackgroundColor="{Binding FirstType.InfoColor}"
                                Border="{pv:BorderMarkup Color=Black,
                                                         Thickness=0}"
                                CornerRadius="0,100,0,100">
                                <Label
                                    Padding="20,4,4,4"
                                    xct:ShadowEffect.Color="#464C56"
                                    xct:ShadowEffect.OffsetY="10"
                                    xct:ShadowEffect.Opacity="0.5"
                                    Text="Méga-Évolution"
                                    TextColor="White" />
                            </pv:PancakeView>
                        </shadows:Shadows>
                    </StackLayout>
                    <StackLayout Margin="20,40,20,0">
                        <CollectionView
                            x:Name="MegaEvolutionList"
                            HeightRequest="180"
                            ItemsSource="{Binding MegaEvolution}"
                            SelectedItem="{Binding SelectedPokemon}"
                            SelectionChanged="MegaEvolutionList_SelectionChanged"
                            SelectionMode="Single"
                            VerticalScrollBarVisibility="Never">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" Span="{Binding MegaEvolution.Count}" />
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="110" />
                                            <RowDefinition Height="15" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Image
                                            Grid.Row="0"
                                            Aspect="AspectFit"
                                            HeightRequest="150"
                                            Source="{Binding PathImg}"
                                            WidthRequest="150" />
                                        <Label
                                            Grid.Row="1"
                                            xct:ShadowEffect.Color="#464C56"
                                            xct:ShadowEffect.OffsetY="10"
                                            xct:ShadowEffect.Opacity="0.5"
                                            FontAttributes="Bold"
                                            HorizontalOptions="CenterAndExpand"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding Name}"
                                            TextColor="black" />
                                        <Label
                                            Grid.Row="2"
                                            xct:ShadowEffect.Color="#464C56"
                                            xct:ShadowEffect.OffsetY="10"
                                            xct:ShadowEffect.Opacity="0.5"
                                            FontSize="11"
                                            HorizontalOptions="CenterAndExpand"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding WhenEvolution}"
                                            TextColor="black" />
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Selected">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="White" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </RelativeLayout>
                <RelativeLayout IsVisible="{Binding GigaEvolIsVisible}">
                    <StackLayout WidthRequest="145">
                        <shadows:Shadows CornerRadius="20">
                            <shadows:Shadows.Shades>
                                <shadows:ImmutableShades>
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="-1,-1"
                                        Color="#464C56" />
                                    <shadows:Shade
                                        BlurRadius="10"
                                        Opacity="0.5"
                                        Offset="1,1"
                                        Color="#464C56" />
                                </shadows:ImmutableShades>
