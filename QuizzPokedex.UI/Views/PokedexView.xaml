                                FontSize="11"
                                Text="Retour"
                                TextColor="White"
                                TextTransform="None" />
                        </cornerBorder:PancakeView>
                    </shadows:Shadows>
                    <shadows:Shadows
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="10,0,30,15"
                        CornerRadius="20">
                        <shadows:Shadows.Shades>
                            <shadows:ImmutableShades>
                                <shadows:Shade
                                    BlurRadius="10"
                                    Opacity="0.3"
                                    Offset="-1,-1"
                                    Color="#464C56" />
                                <shadows:Shade
                                    BlurRadius="10"
                                    Opacity="0.5"
                                    Offset="1,1"
                                    Color="#464C56" />
                            </shadows:ImmutableShades>
                        </shadows:Shadows.Shades>
                        <cornerBorder:PancakeView
                            BackgroundColor="Black"
                            Border="{cornerBorder:BorderMarkup Color=Gray,
                                                               Thickness=0}"
                            CornerRadius="10">
                            <Button
                                Padding="6"
                                BackgroundColor="Black"
                                Command="{Binding CloseModalGenFilterCommandAsync}"
                                FontAttributes="Bold"
                                FontSize="11"
                                Text="Filtrer"
                                TextColor="White"
                                TextTransform="None" />
                        </cornerBorder:PancakeView>
                    </shadows:Shadows>
                </Grid>
            </StackLayout>
            <StackLayout
                x:Name="ModalFilterType"
                AbsoluteLayout.LayoutBounds="0.5,0.6,0.7,0.6"
                AbsoluteLayout.LayoutFlags="All"
                BackgroundColor="White"
                IsVisible="{Binding IsVisibleModalTypeFilter}"
                Opacity="1" />
        </AbsoluteLayout>
    </ContentPage.Content>
</views:MvxContentPage>
