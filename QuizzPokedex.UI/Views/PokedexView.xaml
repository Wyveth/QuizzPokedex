                        Grid.Row="6"
                        Grid.Column="0"
                        Margin="30,0,10,15"
                        CornerRadius="20">
                        <shadows:Shadows.Shades>
                            <shadows:ImmutableShades>
                                <shadows:Shade
                                    BlurRadius="10"
