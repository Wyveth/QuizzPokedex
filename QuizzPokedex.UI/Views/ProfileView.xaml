<?xml version="1.0" encoding="UTF-8" ?>
<views:MvxContentPage
    x:Class="QuizzPokedex.UI.Views.ProfileView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:animation="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
    xmlns:converters="clr-namespace:QuizzPokedex.UI.Converters"
    xmlns:ef="clr-namespace:AiForms.Effects;assembly=AiForms.Effects"
    xmlns:extensions="http://xamarin.com/schemas/2020/toolkit"
    xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:shadows="http://sharpnado.com"
    xmlns:viewmodel="clr-namespace:QuizzPokedex.ViewModels;assembly=QuizzPokedex"
    xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    x:TypeArguments="viewmodel:ProfileViewModel"
    BackgroundColor="#FFFFFF"
    NavigationPage.HasNavigationBar="False">
    <views:MvxContentPage.Resources>
        <ResourceDictionary>
            <converters:ByteToImageSourceConverter x:Key="ByteToImageSourceConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </views:MvxContentPage.Resources>
    <ContentPage.Content>
        <Grid ColumnSpacing="0" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  BackButton  -->
            <StackLayout
                Margin="0,0,0,0"
                BackgroundColor="white"
                Orientation="Horizontal">
                <animation:AnimationView
                    Animation="Resources.lf30_editor_j21rvxzk.json"
                    AnimationSource="EmbeddedResource"
                    Command="{Binding NavigationBackCommandAsync}"
                    HeightRequest="70"
                    HorizontalOptions="Start"
                    RepeatMode="Restart"
                    Rotation="180"
                    ScaleX="1.5"
                    ScaleY="1.5"
                    VerticalOptions="StartAndExpand"
                    WidthRequest="70" />
                <Image Margin="6,3,0,3" Source="@mipmap/pokeball" />
                <Label
                    FontFamily="Montserrat-SemiBold"
                    FontSize="20"
                    HorizontalOptions="CenterAndExpand"
                    LineBreakMode="TailTruncation"
                    Text="Créer son profil"
                    TextColor="#464C56"
                    VerticalOptions="CenterAndExpand" />
                <Image Margin="6,3,0,3" Source="@mipmap/pokeball" />
                <animation:AnimationView
                    Animation="Resources.lf30_editor_nypmp9yw.json"
                    AnimationSource="EmbeddedResource"
                    Command="{Binding SaveCommandAsync}"
                    HeightRequest="70"
                    HorizontalOptions="Start"
                    RepeatMode="Restart"
                    VerticalOptions="StartAndExpand"
                    WidthRequest="70" />
            </StackLayout>

            <Grid
                Grid.Row="1"
                ColumnSpacing="0"
                RowSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <pv:PancakeView
                    Grid.ColumnSpan="2"
                    Margin="20"
                    BackgroundColor="white"
                    Border="{pv:BorderMarkup Color=Black,
                                             Thickness=1}"
                    CornerRadius="5,5,5,5">
                    <StackLayout Orientation="Horizontal">
                        <Image Margin="6,3,0,3" Source="@mipmap/pokeball" />

                        <Entry
                            Margin="3"
                            ClearButtonVisibility="WhileEditing"
                            FontFamily="Montserrat-SemiBold"
                            FontSize="16"
                            HorizontalOptions="FillAndExpand"
                            Placeholder="Pseudo"
                            PlaceholderColor="Gray"
                            Text="{Binding Profile.Name}" />
                    </StackLayout>
                </pv:PancakeView>

                <pv:PancakeView
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="20"
                    BackgroundColor="White"
                    Border="{pv:BorderMarkup Color=Black,
                                             Thickness=1}"
                    CornerRadius="5,5,5,5">

                    <StackLayout Orientation="Horizontal">
                        <Image Margin="6,3,0,3" Source="@mipmap/pokeball" />

                        <DatePicker
                            Margin="3"
                            ef:Placeholder.Color="Gray"
                            ef:Placeholder.Text="Date de naissance"
                            Date="{Binding Profile.BirthDate}"
                            FontFamily="Montserrat-Regular"
                            FontSize="16"
                            Format="dd/MM/yyyy"
                            HorizontalOptions="FillAndExpand" />
                    </StackLayout>
                </pv:PancakeView>
            </Grid>
        </Grid>
    </ContentPage.Content>
</views:MvxContentPage>